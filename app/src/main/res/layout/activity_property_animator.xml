<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhq.exclusivememory.widget.LoadingImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50"
                android:src="@mipmap/ic_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:text="加载中..."
                android:textColor="@color/color_404040"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_color_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:text="文字颜色改变"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_start_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始" />

            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/shape_circle" />

            <TextView
                android:id="@+id/tv_object_animator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的例子"
                android:textColor="#ff2929"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/btn_start_object_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的抛物动画"
                android:textAllCaps="false" />

            <com.zhq.exclusivememory.widget.FallingBallImageView
                android:id="@+id/iv_object"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/shape_circle" />

            <Button
                android:id="@+id/btn_anim_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="属性动画集合" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是帅哥"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="我是靓女"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>