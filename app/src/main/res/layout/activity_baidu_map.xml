<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.third_party.map.BaiduMapActivity">
   <com.baidu.mapapi.map.MapView
       android:id="@+id/map_view"
       android:clickable="true"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
   <LinearLayout
       android:background="#cc000000"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_marginLeft="@dimen/dp_10"
          android:text="地图类型切换"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <RadioGroup
          android:id="@+id/radio_group"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <RadioButton
             android:id="@+id/rb_normal_map"
             android:text="普通地图"
             android:checked="true"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <RadioButton
             android:id="@+id/rb_moon_map"
             android:text="卫星地图"
             android:textColor="@color/color_white"
             android:layout_marginStart="@dimen/dp_10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/dp_10" />
         <RadioButton
             android:id="@+id/rb_blank_map"
             android:text="空白地图"
             android:textColor="@color/color_white"
             android:layout_marginStart="@dimen/dp_10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/dp_10" />
      </RadioGroup>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <CheckBox
             android:text="开启实时路况图"
             android:id="@+id/cb_traffic_map"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <CheckBox
             android:text="开启热力图"
             android:id="@+id/cb_hot_map"
             android:textColor="@color/color_white"
             android:layout_marginStart="@dimen/dp_10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/dp_10" />
      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <Button
             android:id="@+id/btn_open_location"
             android:text="开启定位图层"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_gravity="center_vertical"
             android:id="@+id/tv_location_latlng"
             android:text="经纬度"
             android:textColor="@color/color_white"
             android:layout_marginLeft="@dimen/dp_10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_marginLeft="@dimen/dp_10"
             android:id="@+id/tv_location_name"
             android:text="位置信息"
             android:textColor="@color/color_white"
             android:layout_gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <Button
             android:id="@+id/btn_custom_location_ui"
             android:text="自定义定位UI"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <CheckBox
             android:id="@+id/cb_scale_rule"
             android:text="比例尺"
             android:checked="true"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <CheckBox
             android:id="@+id/cb_compass"
             android:text="指南针"
             android:checked="true"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <CheckBox
             android:id="@+id/cb_scale_button"
             android:text="地图缩放"
             android:checked="true"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_map_1"
            android:text="禁用手势"
            android:checked="false"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_map_2"
            android:text="平移"
            android:checked="true"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_map_3"
            android:text="缩放"
            android:checked="true"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_map_4"
            android:text="俯视（3D）"
            android:checked="true"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_map_5"
            android:text="旋转"
            android:checked="true"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
     </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <CheckBox
             android:id="@+id/cb_show_poi"
             android:checked="true"
             android:text="显示地图POI"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>
   </LinearLayout>
  <LinearLayout
      android:background="@color/color_white"
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_50">
     <Button
         android:id="@+id/btn_draw_marker"
         android:text="绘制Marker在西湖"
         android:textAllCaps="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_poi_search"
         android:text="Poi检索"
         android:textAllCaps="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
  </LinearLayout>
</FrameLayout>